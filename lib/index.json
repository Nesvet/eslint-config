{
	"extends": [
		"eslint:recommended",
		"plugin:import/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/stylistic",
		"plugin:import/typescript"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"import",
		"simple-import-sort",
	    "indent-empty-lines"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"project": true
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	},
	"ignorePatterns": [
		"!.*",
		".eslintrc*"
	],
	"rules": {
		"array-callback-return": "error",
		"no-constant-binary-expression": "error",
		"no-debugger": "warn",
		"no-duplicate-imports": "warn",
		"no-new-native-nonconstructor": "error",
		"no-self-compare": "error",
		"no-template-curly-in-string": "error",
		"no-unmodified-loop-condition": "error",
		"no-unreachable-loop": "error",
		"no-unused-private-class-members": "error",
		"no-unused-vars": "off",
		"require-atomic-updates": "error",
		
		"accessor-pairs": "error",
		"arrow-body-style": "warn",
		"block-scoped-var": "error",
		"curly": [ "warn", "multi" ],
		"dot-notation": "warn",
		"eqeqeq": [ "error", "smart" ],
		"grouped-accessor-pairs": "warn",
		"guard-for-in": "error",
		"logical-assignment-operators": "warn",
		"new-cap": "error",
		"no-array-constructor": "error",
		"no-bitwise": [ "error", { "allow": [ "~" ] } ],
		"no-caller": "error",
		"no-else-return": "warn",
		"no-empty": [ "warn", { "allowEmptyCatch": true } ],
		"no-eq-null": "error",
		"no-eval": "warn",
		"no-extend-native": "warn",
		"no-extra-bind": "warn",
		"no-extra-boolean-cast": "warn",
		"no-extra-label": "warn",
		"no-extra-semi": "warn",
		"no-implicit-coercion": [ "warn", { "allow": [ "!!", "~" ] } ],
		"no-implicit-globals": "error",
		"no-implied-eval": "error",
		"no-invalid-this": "error",
		"no-iterator": "warn",
		"no-label-var": "error",
		"no-lone-blocks": "warn",
		"no-loop-func": "error",
		"no-magic-numbers": [ "warn", {
			"ignore": [ -1, 0, 1, 100, 1000 ],
			"ignoreDefaultValues": true,
			"ignoreClassFieldInitialValues": true
		} ],
		"no-mixed-operators": "warn",
		"no-new-wrappers": "warn",
		"no-proto": "error",
		"no-return-assign": "error",
		"no-script-url": "error",
		"no-sequences": "error",
		"no-shadow": "error",
		"no-unneeded-ternary": "warn",
		"no-unused-expressions": "error",
		"no-useless-call": "warn",
		"no-useless-computed-key": "warn",
		"no-useless-concat": "warn",
		"no-useless-constructor": "warn",
		"no-useless-rename": "warn",
		"no-useless-return": "warn",
		"no-var": "warn",
		"object-shorthand": "warn",
		"operator-assignment": "warn",
		"prefer-arrow-callback": "warn",
		"prefer-const": "warn",
		"prefer-object-has-own": "warn",
		"prefer-object-spread": "warn",
		"prefer-regex-literals": "warn",
		"prefer-rest-params": "warn",
		"prefer-template": "warn",
		"quote-props": [ "warn", "as-needed" ],
		"require-await": "error",
		"spaced-comment": [ "warn", "always", {
			"line": { "markers": [ "/", "#if", "#else", "#elif", "#endif" ], "exceptions": [ "/", "-", "+" ] },
			"block": { "markers": [ "!" ], "exceptions": [ "*" ], "balanced": true }
		} ],
		"symbol-description": "error",
		"yoda": "warn",
		
		"array-bracket-newline": [ "warn", "consistent" ],
		"array-bracket-spacing": [ "warn", "always" ],
		"array-element-newline": [ "warn", "consistent" ],
		"arrow-parens": [ "warn", "as-needed" ],
		"arrow-spacing": "warn",
		"block-spacing": "warn",
		"brace-style": "warn",
		"comma-dangle": "warn",
		"comma-spacing": [ "warn", { "before": false, "after": true } ],
		"comma-style": "warn",
		"computed-property-spacing": [ "warn", "never" ],
		"dot-location": [ "warn", "property" ],
		"eol-last": "warn",
		"func-call-spacing": "warn",
		"function-call-argument-newline": [ "warn", "consistent" ],
		"generator-star-spacing": [ "warn", {"before": false, "after": true} ],
		"indent": [ "warn", "tab", {
			"SwitchCase": 1,
			"ignoredNodes": [ "-ConditionalExpression" ]
		} ],
		"key-spacing": [ "warn", { "mode": "strict" } ],
		"keyword-spacing": "warn",
		"lines-around-comment": "warn",
		"lines-between-class-members": [ "warn", "always", { "exceptAfterSingleLine": true } ],
		"max-statements-per-line": "warn",
		"new-parens": "warn",
		"newline-per-chained-call": [ "warn", { "ignoreChainWithDepth": 4 } ],
		"no-extra-parens": [ "warn", "all", {
			"conditionalAssign": false,
			"returnAssign": false,
			"nestedBinaryExpressions": false,
			"ternaryOperandBinaryExpressions": false,
			"ignoreJSX": "all",
			"enforceForSequenceExpressions": false,
			"enforceForNewInMemberExpressions": false,
			"enforceForFunctionPrototypeMethods": false
		} ],
		"no-mixed-spaces-and-tabs": "warn",
		"no-multi-spaces": [ "warn", { "ignoreEOLComments": false } ],
		"no-multiple-empty-lines": "warn",
		"no-trailing-spaces": [ "warn", { "skipBlankLines": true } ],
		"no-whitespace-before-property": "warn",
		"nonblock-statement-body-position": [ "warn", "below" ],
		"object-curly-newline": [ "warn", {
			"ImportDeclaration": { "multiline": true, "minProperties": 4 }
		} ],
		"object-curly-spacing": [ "warn", "always" ],
		"operator-linebreak": [ "warn", "after" ],
		"padding-line-between-statements": [
			"warn",
			{ "blankLine": "always", "prev": "directive", "next": "*" },
			{ "blankLine": "any", "prev": "directive", "next": "directive" },
			{ "blankLine": "always", "prev": "*", "next": "return" }
		],
		"quotes": "warn",
		"rest-spread-spacing": "warn",
		"semi": "warn",
		"semi-spacing": "warn",
		"semi-style": "warn",
		"space-before-blocks": "warn",
		"space-before-function-paren": [ "warn", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		} ],
		"space-in-parens": [ "warn", "never" ],
		"space-infix-ops": "warn",
		"space-unary-ops": "warn",
		"switch-colon-spacing": "warn",
		"template-curly-spacing": "warn",
		"template-tag-spacing": "warn",
		"wrap-iife": [ "warn", "inside", { "functionPrototypeMethods": true } ],
		"yield-star-spacing": "warn",
		
		"@typescript-eslint/no-unused-vars": [ "error", { "ignoreRestSiblings": true } ],
		"@typescript-eslint/consistent-type-definitions": [ "warn", "type" ],
		
		"import/newline-after-import": [ "warn", { "count": 2 } ],
		"simple-import-sort/imports": [ "warn", { "groups": [ [
			"^bun($|\\W)",
			"^node:",
			"^@",
			"^\\w",
			"^#",
			"^\\$",
			"."
		] ] } ],
		"simple-import-sort/exports": "warn",
		"indent-empty-lines/indent-empty-lines": [ "warn", "tab" ]
	},
	"overrides": [
		{
			"files": [ "*.json" ],
			"extends": "plugin:eslint-plugin-json-es/recommended",
			"parser": "eslint-plugin-json-es",
			"rules": {}
		}
	]
}
