{
	"extends": ".",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"overrides": [
		{
			"files": [ "*.jsx", "*.tsx" ],
			"rules": {
				"simple-import-sort/imports": [ "warn", { "groups": [ [
					"^bun($|\\W)",
					"^node:",
					"^react($|-)",
					"^@",
					"^\\w",
					"^#",
					"^\\$",
					"."
				] ] } ]
			}
		}
	]
}